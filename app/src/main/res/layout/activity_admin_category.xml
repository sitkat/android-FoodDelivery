<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Admin.AdminCategoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/clickableTxtClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Закрыть"
                    android:textColor="@color/buttonText"
                    android:textSize="17sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:text="Выберите категорию"
        android:textColor="@color/buttonText"
        android:textStyle="bold|italic"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/slogan">

        <ImageView
            android:id="@+id/sushi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sushi"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/burger"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/burger"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/pizza"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pizza"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first_line">

        <ImageView
            android:id="@+id/shayrma"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/shayrma"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/fish"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/fish"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/steak"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/steak"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/second_line">

        <ImageView
            android:id="@+id/ramen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ramen"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/homeMeal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/soup"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/sweets"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sweets"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forth_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/third_line">

        <ImageView
            android:id="@+id/breakfast"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/breakfast"
            android:layout_margin="10dp" />
        <ImageView
            android:id="@+id/drinks"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/drinks"
            android:layout_margin="10dp" />
        <ImageView
            android:id="@+id/alcohol"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/alcohol"
            android:layout_margin="10dp" />
    </LinearLayout>

</RelativeLayout>